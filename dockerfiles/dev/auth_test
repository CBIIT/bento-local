FROM node:16-alpine3.15

ARG AUTH_BRANCH

ENV PORT 8082
ENV NODE_ENV production

RUN apk add --virtual .build-deps --repository=http://dl-cdn.alpinelinux.org/alpine/edge/community \
 git

RUN mkdir -p /usr/src/app && cd /usr/src/app && git clone -b master https://github.com/CBIIT/bento-auth .

WORKDIR /usr/src/app

RUN npm ci --only=production

#USER node

EXPOSE 8082

CMD [ "node", "./bin/www" ]
